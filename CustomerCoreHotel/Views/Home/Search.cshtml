@model IEnumerable<CustomerCoreHotel.Models.Hotels>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<main role="main">

    <section class="jumbotron text-center">
        <div class="container">
            <h1 class="jumbotron-heading">Hotel Room Booking</h1>
            <p class="lead text-muted">
                Welcome
            </p>
        </div>
    </section>

    <div class="album py-5 bg-light">
        <div class="container">

            <div class="row">
                @foreach (var item in ViewBag.Hotel)
                {
                    <!--Thumbnail Starts-->
                    <div class="col-md-4">
                        <div class="card mb-4 shadow-sm">
                            <img src="@item.HotelImage" class="bd-placeholder-img card-img-top image" />


                            <div class="card-body">
                                <p class="card-text">@item.HotelName</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <a asp-controller="HotelRoom" asp-action="Details" asp-route-id="@item.HotelId" class="btn btn-sm btn-outline-secondary">View Rooms</a>
                                        <a asp-controller="Home" asp-action="Details" asp-route-id="@item.HotelId" class="btn btn-sm btn-outline-secondary">View Details</a>
                                    </div>
                                    <small class="text-muted">9 mins</small>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--Thumbnail Ends-->
                }

            </div>
        </div>
    </div>

</main>





<form class="form-inline my-2 my-lg-0">
    <input class="form-control mr-sm-2" name="Search" id="Search" type="text" placeholder="Search" aria-label="Search">&nbsp;
    <button class="btn btn-outline-success my-2 my-sm-0" asp-controller="Home" asp-action="Search" type="submit">Search</button>&nbsp;&nbsp;
    <a class="btn btn-outline-success my-2 my-sm-0" asp-controller="Booking" asp-action="Index">View Cart <span>@ViewBag.totalitem</span></a>
</form>

