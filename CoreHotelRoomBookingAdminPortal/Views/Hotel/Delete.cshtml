@model CoreHotelRoomBookingAdminPortal.Models.Hotel
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>Delete</h2>
<h3>Are you sure you want to delete this ?</h3>
<form asp-action="Delete" asp-controller="Hotel">
    <label asp-for="HotelId"></label>
    <input type="text" asp-for="HotelId" />
    <br />
    <label asp-for="HotelName"></label>
    <input type="text" asp-for="HotelName" />
    <br />
    <label asp-for="HotelTypeId"></label>
    <select asp-for="HotelTypeId" asp-items="ViewBag.HotelTypes"></select>
    <br />
    <input type="submit" value="Delete Hotel" />
</form>

